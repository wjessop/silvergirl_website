body {
  font-family: Consolas, Monospace, Courier;
  /* MacOSX & Windows = Courier */
  font-size: 16px;
  line-height: 1.5;
  max-width: 900px;
  /* For Desktop PC (see @media for Tablets/Phones) */
  padding-left: 2%;
  padding-right: 3%;
  margin: 0 auto;
  background: #F5F5F0; }
  body nav {
    margin-bottom: 20px; }

a {
  font-weight: bold; }

a:hover {
  text-decoration: none; }

img {
  border: none; }

p {
  margin-top: 0px;
  margin-bottom: 4ch; }

sup {
  vertical-align: 0.3em;
  font-size: 0.65em; }

pre {
  font-family: Consolas, Monospace, Courier;
  /* MacOSX & Windows = Courier */
  font-size: 16px;
  background-color: white;
  border: 1px solid Black;
  padding-left: 2%;
  padding-top: 1ch;
  padding-bottom: 1ch;
  overflow: scroll; }

div.heading {
  font-weight: bold;
  text-transform: uppercase; }

@media (max-width: 500px) {
  /* For small screen decices */
  * {
    font-size: 1em; }
  h1 {
    font-size: 1.4em; }
  h2 {
    font-size: 1.1em; }
  body {
    padding-left: 5%;
    padding-right: 5%; }
  pre {
    font-size: 11px; } }

.title {
  text-decoration: none; }

img.pixel, canvas.pixel {
  image-rendering: pixelated;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges; }

blockquote {
  background-color: #f3f3f3;
  border: dashed 1px grey;
  width: 97.5%;
  font-style: italic;
  text-align: justify;
  padding: 2ch;
  margin-right: 2ch;
  margin-left: 2ch;
  margin-bottom: 2ch;
  margin-top: 0ch; }
  blockquote p {
    margin: 0px; }

blockquote div {
  text-transform: none;
  text-align: right;
  width: 100%; }

/* ----- Posts ----- */
article h1, article h2 {
  clear: both; }

article hr {
  width: 100%;
  clear: both;
  height: 1px;
  border: 0px;
  background-color: #a1a1a1; }

article figure {
  margin: 0px 0px 4ch 0px;
  max-width: 100%; }

article figcaption {
  max-width: 100%; }
  article figcaption h4 {
    margin: 0px; }

article .right {
  float: right;
  margin: 10px 0px 40px 40px;
  max-width: 400px; }

article .left {
  float: left;
  margin: 10px 40px 40px 0px;
  max-width: 400px; }

article .full {
  width: 100%; }
  article .full img {
    max-width: 100%; }

article .youtube-embed {
  width: 100%;
  position: relative;
  padding-bottom: 56.25%;
  height: 0;
  overflow: hidden;
  margin-bottom: 30px; }
  article .youtube-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0; }

article img {
  max-width: 400px;
  margin: 10px 0px; }

article img[src$='#full'] {
  max-width: 100%; }

article img[src$='#right'] {
  float: right;
  margin: 10px 0px 40px 40px; }

article img[src$='#left'] {
  float: left;
  margin: 10px 40px 40px 0px; }

article ul {
  clear: both; }

article table {
  margin-bottom: 40px; }

footer {
  margin-top: 50px; }
  footer hr {
    margin-top: 10px; }
  footer p {
    text-align: center; }
